<section class="login">
    <!-- component -->
<div class="flex items-center justify-center pt-24">
    <div class="w-full max-w-xs">
      <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded shadow-md">
        <div class="mb-4">
          <label
            class="block mb-2 text-sm font-normal text-gray-700" for="username">
            Nombre
          </label>
          <input
            class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
            name="name"
            autocomplete="off"
            v-model="form.email"
            type="text"
            required
            autofocus
            placeholder="nombre"
          />
        </div>
        <div class="mb-4">
            <label
              class="block mb-2 text-sm font-normal text-gray-700" for="username">
              Usuario
            </label>
            <input
              class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
              name="username"
              autocomplete="off"
              v-model="form.email"
              type="text"
              required
              autofocus
              placeholder="username"
            />
          </div>
        <div class="mb-6">
          <label
            class="block mb-2 text-sm font-normal text-gray-700"
            for="password"
          >
            Password
          </label>
          <input
            class="w-full px-3 py-2 mb-3 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
            v-model="form.password"
            type="password"
            placeholder="Password"
            name="password"
            required
            autocomplete="current-password"
          />
        </div>
        <div class="flex items-center justify-between">
          <button class="inline-block px-4 py-2 text-white bg-blue-500 rounded shadow-lg btn-primary" type="submit">Registrarte</button>
          <a
            class="inline-block text-sm font-bold text-blue-500 align-baseline hover:text-blue-800"
            href="/login"
          >
            Ya tienes una cuenta?
          </a>
        </div>
      </form>
      <p class="text-xs text-center text-gray-500">
        &copy;2020 Gau Corp. All rights reserved.
      </p>
    </div>
  </div>
</section>